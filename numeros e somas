repos = 'S'
soma = quant = maior = menor = 0
while repos in 'Ss':
    num = int(input('DIGITE UM NÚMERO:'))
    soma = soma + num
    quant += 1
    if quant == 1:
        maior = menor = num
    else:
        if num > maior:
            maior = num
        if num < menor:
            menor = num
    reposta = str(input('VOCÊ QUER CONTINUAR[s/n]:'))
media = soma/quant
print(f'a quantidade {quant} soma {soma} media {media}')
print(f'o menor foi {menor} e o maior {maior}')
